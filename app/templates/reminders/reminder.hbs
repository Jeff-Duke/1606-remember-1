<div class="reminder">
  <h3 class="spec-reminder-title">{{model.title}}</h3>

  {{#if isEditing}}
    {{reminder-form reminder=model formSubmitted=(action 'saveReminder' model) button-text="Save"}}

  {{else}}
    <p class="spec-reminder-date">
      {{model.date}}
    </p>

    {{#if model.notes}}
      <p class="spec-reminder-notes">
        {{model.notes}}
      </p>
    {{/if}}

    <button {{action 'editReminder'}}>Edit</button>

  {{/if}}

</div>

{{outlet}}
